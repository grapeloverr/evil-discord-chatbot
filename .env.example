# Discord Bot Configuration
# Get your token from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Environment (production or development)
BOT_ENV=production

# LLM Configuration
LOCAL_LLM_URL=http://127.0.0.1:11434
MODEL_NAME=dolphin-llama3
MODEL_TYPE=ollama
LLM_TEMPERATURE=0.95
LLM_MAX_TOKENS=200

# Optional personality override while keeping MODEL_NAME backend.
# Example: set to gpt4chan for edgier style on the same Ollama model.
# PERSONALITY_PRESET=gpt4chan

# Optional base model used when !model gpt4chan is selected.
# GPT4CHAN_BASE_MODEL=dolphin-llama3:8b

# Optional: lower value = stricter memory matching, less random old-context bleed.
# MEMORY_MIN_RELEVANCE=0.35

# Optional: allow rough profanity/banter style in prompt guidance.
# UNCENSORED_MODE=true

# Optional: sass tuning (0.0-1.0)
# SASS_MODE=true
# SASS_LEVEL=0.9
# ROAST_MODE=true
# ROAST_LEVEL=0.9

# Optional: duplicate message signature window in seconds.
# MESSAGE_SIGNATURE_TTL_SEC=8
# Optional: extra mention-level dedupe window in seconds.
# MENTION_DEDUPE_TTL_SEC=6

# Optional: single-instance lock path to prevent duplicate bot processes.
# INSTANCE_LOCK_FILE=/tmp/vrilgass_bot.lock

# Optional: OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here

# Enable Voice Features (requires additional dependencies)
# Set to true to enable voice chat, TTS, and speech recognition
ENABLE_VOICE=true

# Voice tuning (optional)
# VOICE_DEBUG=false
# VOICE_MIN_CHUNK_BYTES=192000
# VOICE_PROCESS_CHUNK_BYTES=192000
# VOICE_FORCE_PROCESS_BYTES=384000
# VOICE_MAX_BUFFER_BYTES=576000
# VOICE_MIN_FLUSH_BYTES=96000
# VOICE_FLUSH_SILENCE_SEC=0.8
# VOICE_MIN_RMS=180
# VOICE_TEXT_DEDUPE_SEC=3.0
# VOICE_ENERGY_THRESHOLD=250
# VOICE_PAUSE_THRESHOLD=0.6
# VOICE_NON_SPEAKING_DURATION=0.2
# STT_WHISPER_FALLBACK=true
# STT_WHISPER_MODEL=base.en
# NO_RAILGUARD_MODE=true

# Response tuning (optional)
# MAX_RESPONSE_CHARS=320
# MAX_VOICE_SENTENCES=2

# TTS voice tuning (optional)
# TTS_VOICE=en-US-JennyNeural
# TTS_RATE=+4%
# TTS_PITCH=+0Hz

# Optional: Database Configuration
# MEMORY_FILE=memory.db
